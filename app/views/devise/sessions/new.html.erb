<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Login</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input" if devise_mapping.rememberable? %>
          <%= f.label :remember_me, class: "form-check-label" if devise_mapping.rememberable? %>
        </div>
        <div class="form-group mt-3">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
